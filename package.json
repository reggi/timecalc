{
  "name": "@reggi/timecalc",
  "version": "1.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/reggi/timecalc"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "data",
    "src"
  ],
  "scripts": {
    "build": "tsup ./src/index.ts --format esm,cjs --dts",
    "build:abbr2offset": "tsx ./src/build/abbr2offset.ts > ./data/abbr2offset.json",
    "build:airports": "tsx ./src/build/airports.ts > ./data/airports.json",
    "build:backhalf": "tsx ./src/build/backhalf.ts > ./data/backhalf.json",
    "build:city": "tsx ./src/build/city.ts > ./data/city.json",
    "build:data": "npm run build:abbr2offset && npm run build:airports && npm run build:backhalf && npm run build:city && npm run build:merge",
    "build:merge": "tsx ./src/build/merge.ts > ./data/merge.json",
    "check": "npm run build && npm run build:data && npm run style:fix && npm run test && sort-package-json",
    "style": "prettier --check .",
    "style:fix": "prettier --write .",
    "test": "tsx --test ./test/*"
  },
  "prettier": "@github/prettier-config",
  "dependencies": {
    "chrono-node": "^2.7.7",
    "luxon": "^3.5.0",
    "moment-timezone": "^0.5.46",
    "ms": "^2.1.3",
    "words-to-numbers": "^1.5.1"
  },
  "devDependencies": {
    "@github/prettier-config": "^0.0.6",
    "@types/luxon": "^3.4.2",
    "@types/node": "^22.8.6",
    "prettier": "^3.2.5",
    "sort-package-json": "^2.10.1",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3"
  },
  "public": true
}
